<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="Demo">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Define the classes -->
        <class>org.hibernate.brmeyer.demo.entity.User</class>
        <class>org.hibernate.brmeyer.demo.entity.Tool</class>
        <class>org.hibernate.brmeyer.demo.entity.Skill</class>
        <class>org.hibernate.brmeyer.demo.entity.Community</class>
        <class>org.hibernate.brmeyer.demo.entity.Donation</class>
        <class>org.hibernate.brmeyer.demo.entity.Comment</class>
        <class>org.hibernate.brmeyer.demo.entity.ServiceEvent</class>
        <class>org.hibernate.brmeyer.demo.entity.Project</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.connection.driver_class" value="software.amazon.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:aws-wrapper:postgresql://localhost/testhibernate"/>
            <property name="hibernate.connection.username" value="test"/>
            <property name="hibernate.connection.password" value="test"/>

            <property name="hibernate.connection.pool_size" value="5"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>
